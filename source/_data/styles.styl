/* **** 全局样式 **** */
/* 隐藏顶部线条 */
.headband {
  display: none;
}

/* 顶部边距 */
@media (min-width: 991px) {
  .main {
    margin-top: 12px;
  }
}

/* 侧边栏 */
/* 侧边圆角 */
.header, .sidebar-inner {
  border-radius: $common-radius;
}

/* 文章卡片 */
.post-block {
  border-radius: $common-radius !important;
}

/* 底部分页 */
.pagination {
  border: none !important;
  background: none !important;
  box-shadow: none !important;
}

/* 页码按钮 */
.pagination .prev, .pagination .next, .pagination .page-number {
  border: none;
  border-radius: $common-radius;

  &:hover {
    color: white;
    // background: $btn-default-hover-bg;
    // btn-shadow-hover-only();
  }
}

/* 当前页码 */
.pagination .page-number.current {
  // background: $btn-default-bg;
  // btn-shadow-only();
}

/* 返回顶部按钮 */
.back-to-top {
  // background: $btn-default-bg;
  opacity: 0.8;
  // font-weight: bold;
  // font-size: 0.5em;
  border-radius: 1em;

  // height: 36px;
  &:hover {
    color: #fff;
  }
}

/* 文章信息栏 */
.index .post-meta, .post .post-meta {
  justify-content: left;
}

/* 文章标题 */
.index .post-title,
.post .post-title {
  text-align: left;
